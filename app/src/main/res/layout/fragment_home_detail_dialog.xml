<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/round_rect"
    android:padding="24dp">

    <ImageView
        android:id="@+id/detail_order_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/black_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:tint="@color/first_red"/>

    <!-- 할 일 제목 -->
    <TextView
        android:id="@+id/detail_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="할 일 제목"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/detail_order_iv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"/>

    <!-- 부가 설명 -->
    <TextView
        android:id="@+id/detail_desc_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="부가 설명"
        android:textSize="15sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/detail_title_tv"
        app:layout_constraintStart_toStartOf="@id/detail_title_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- 수정 버튼(연필 아이콘) -->
    <ImageView
        android:id="@+id/detail_edit_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/baseline_drive_file_rename_outline_24"
        app:layout_constraintTop_toTopOf="@id/detail_title_tv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 취소 버튼 -->
    <Button
        android:id="@+id/detail_cancle_btn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="취소"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:backgroundTint="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/detail_desc_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/detail_complete_btn"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"/>

    <!-- 완료 버튼 -->
    <Button
        android:id="@+id/detail_complete_btn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="완료"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="#986119"
        app:layout_constraintTop_toTopOf="@id/detail_cancle_btn"
        app:layout_constraintStart_toEndOf="@id/detail_cancle_btn"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
