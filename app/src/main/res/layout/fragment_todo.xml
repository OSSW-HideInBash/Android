<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".TodoFragment"
    android:background="@color/brown_bg">

    <TextView
        android:id="@+id/todo_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="n월 n일"
        android:textSize="30sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:id="@+id/todo_arrow_left_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_arrow_circle_left_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/todo_date_tv"
        android:layout_marginStart="20dp"
        app:tint="@color/white" />
    <ImageView
        android:id="@+id/todo_arrow_right_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_arrow_circle_right_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/todo_date_tv"
        android:layout_marginEnd="20dp"
        app:tint="@color/white" />

    <ProgressBar
        android:id="@+id/todo_pb"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/circle_progressbar_background_bigger"
        android:progressDrawable="@drawable/circle_progressbar"
        android:indeterminateOnly="false"
        android:max="100"
        android:progress="60"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/todo_date_tv"/>
    <ImageView
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:src="@drawable/black_circle"
        app:layout_constraintStart_toStartOf="@id/todo_pb"
        app:layout_constraintEnd_toEndOf="@id/todo_pb"
        app:layout_constraintTop_toTopOf="@id/todo_pb"
        app:layout_constraintBottom_toBottomOf="@id/todo_pb"/>
    <TextView
        android:id="@+id/todo_pb_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="n / n"
        android:textColor="@color/third_yellow"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/todo_pb"
        app:layout_constraintEnd_toEndOf="@id/todo_pb"
        app:layout_constraintTop_toTopOf="@id/todo_pb"
        app:layout_constraintBottom_toBottomOf="@id/todo_pb"/>

    <View
        android:id="@+id/todo_bar"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/todo_pb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/todo_all_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전체"
        android:textSize="15sp"
        android:background="@drawable/round_rect"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/todo_bar"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/todo_yet_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="예정"
        android:textSize="15sp"
        android:background="@drawable/round_rect"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/brown_button"
        app:layout_constraintStart_toEndOf="@id/todo_all_btn"
        app:layout_constraintTop_toTopOf="@id/todo_all_btn"
        android:layout_marginStart="10dp" />
    <TextView
        android:id="@+id/todo_done_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="완료"
        android:textSize="15sp"
        android:background="@drawable/round_rect"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toEndOf="@id/todo_yet_btn"
        app:layout_constraintTop_toTopOf="@id/todo_all_btn"
        android:layout_marginStart="10dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/todo_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/todo_all_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp"/>

    <ImageView
        android:id="@+id/todo_add_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/add_member_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:elevation="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>